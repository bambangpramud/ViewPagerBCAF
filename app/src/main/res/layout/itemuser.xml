<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtNamaUser"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/txtNamaUserItemUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama" />

    <TextView
        android:id="@+id/txtTeleponUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nomor telepon" />

    <TextView
        android:id="@+id/txtAlamatUser"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:inputType="textLongMessage|textMultiLine"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque iaculis odio massa, sit amet rutrum purus pretium sed. Sed elementum est ipsum, nec finibus nulla malesuada vitae. Phasellus accumsan eros eros, id varius massa sollicitudin vel." />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:text="Delete" />

</LinearLayout>